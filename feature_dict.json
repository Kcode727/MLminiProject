    "plot_type": "bar_boost",
    "plot_data": {"feature": "IsMonthEnd"}
  },
  "Month_sin": {
    "description": "Sine encoding of month (1–12)",
    "why": "Cyclical encoding: Dec and Jan are close in value, not far apart",
    "example": "July → sin(2π×7/12) ≈ 0.0",
    "category": "Cyclical",
    "plot_type": "cyclical",
    "plot_data": {
      "period": 12,
      "labels": ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"]
    }
  },
  "Month_cos": {
    "description": "Cosine encoding of month (1–12)",
    "why": "Paired with sin to fully represent 12-month cycle in 2D",
